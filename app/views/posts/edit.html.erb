<h1>수정 페이지</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
  <%= f.label :kind %><br>
  <%= f.text_field :kind %>

  <%= f.label :name %><br>
  <%= f.text_field :name %>

  <%= f.label :price %><br>
  <%= f.text_area :price %>

  <%= f.submit %>
<% end %>

<%= link_to 'Back', posts_path %>