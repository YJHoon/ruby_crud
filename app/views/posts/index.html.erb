<%= link_to 'New Post', new_post_path %>


<table>
  <tr>
    <th>Kind</th>
    <th>Name</th>
    <th>Price</th>
  </tr>
  
  <% @posts.each do |post| %>
  <tr>
    <% if post.kind == post.kind %>
    
    <% end %>
    <td><%= post.kind %></td>
    <td><%= post.name %></td>
    <td><%= post.price %></td>
    <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %>
    <td><%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></td></td>
  </tr>
  <% end %>
</table>